class ColorsDataInc
{
	private string strColor;
	private string strRGBHex = "\x07";
	
	ColorsDataInc( const string&in Color, const string&in RGBHex, bool bOverride = false )
	{
		strColor = Color;
		if ( bOverride )
			strRGBHex = RGBHex;
		else
			strRGBHex += RGBHex;
	}
	
	ColorsDataInc() {}
	
	string GrabColor() { return strColor; }
	string GrabHEX() { return strRGBHex; }
}

// Color setup and usage
class ColorsInc
{
	string Colorize( string& in StrMsg )
	{
		// Go trough each text
		for ( uint i = 0; i < ColorData.length(); i++ )
		{
			string strColor = "{" + ColorData[ i ].GrabColor() + "}";
			if ( Utils.StrContains( strColor, StrMsg ) )
				StrMsg = Utils.StrReplace( StrMsg, strColor, ColorData[ i ].GrabHEX() );
		}
		
		// Return with our colored text
		return StrMsg;
	}
	string GetStringColorFromPlayer( CZP_Player@ pPlayer )
	{
		if ( pPlayer is null )
			return Colorize( "{default}" );
		
		CBasePlayer@ pPlayerEnt = pPlayer.opCast();	// Convert to CBasePlayer
		CBaseEntity@ pBaseEnt = pPlayerEnt.opCast(); // Convert to CBaseEntity
		int iTeamNum = pBaseEnt.GetTeamNumber();
		
		if ( iTeamNum == 2 ) // survivor
			return Colorize( "{blue}" );
		
		else if ( iTeamNum == 3 ) // zombie
		{
			if ( pPlayer.IsCarrier() )
				return Colorize( "{gold}" );
			else
				return Colorize( "{red}" );
		}
		return Colorize( "{default}" );
	}
};

